      <ul>
        <li>Price: $<%= item.Price %></li>
        <li>Rating: <%= item.rating %></li>
        <li>Details: <%= item.details %></li>
      </ul>
      <% }; %>
      <% }); %>
    </ul>
    <h2>Desserts</h2>
    <ul>
      <% menu.forEach(item => { %>
      <% if(item.category === 'desserts'){ %>
      <% if(item.rating === 5 && item.name[0] !== "⭐") item.name = `⭐${item.name}`; %>
      <li><%= item.name %></li>
      <ul>
        <li>Price: $<%= item.Price %></li>
        <li>Rating: <%= item.rating %></li>
        <li>Details: <%= item.details %></li>
      </ul>
      <% }; %>
      <% }); %>
    </ul>
  </ul>
</body>
</html>
